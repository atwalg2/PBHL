<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/league_box_frame_layout"
    android:layout_width="350dp"
    android:layout_height="60dp">

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/right_stat"
            android:layout_width="175dp"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/bg_leaguebox_bot"
            android:paddingLeft="7dp"
            android:text="4-2-1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/right_team"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/bg_leagebox_top"
            android:fontFamily="sans-serif-condensed"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:text="SunnyValley"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/left_team"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/bg_leagebox_top"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:text="Henry Singer"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/left_stat"
            android:layout_width="175dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/bg_leaguebox_bot"
            android:paddingRight="7dp"
            android:text="5-1-3"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white" />
    </GridLayout>

    <TextView
        android:id="@+id/game_time"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginLeft="135dp"
        android:background="@drawable/bg_leagebox_top"
        android:paddingTop="5dp"
        android:text="12:30pm"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</FrameLayout>